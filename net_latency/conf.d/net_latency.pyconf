#
# net_latency - A simple Ganglia module that
# measures network latency.
#
# Created by Giorgos Kappes <contact@giorgoskappes.com>
#
modules {
  module {
    name = "net_latency"
    language = "python"
    param ConstantValue {
      value = 0
    }
  }
}

collection_group {
  collect_every = 10
  time_threshold = 20
  metric {
    name = "net_latency"
    title = "Network Latency"
    value_threshold = 2000
  }
}
